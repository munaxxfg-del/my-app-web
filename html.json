<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Animated Auto Payment System</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .payment-box {
      background: white;
      padding: 25px;
      border-radius: 20px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.2);
      width: 350px;
      text-align: center;
      animation: pop 0.6s ease;
    }

    @keyframes pop {
      0% {transform: scale(0.5); opacity: 0;}
      100% {transform: scale(1); opacity: 1;}
    }

    h2 {
      margin-bottom: 20px;
      color: #444;
    }

    .method {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .method button {
      width: 48%;
      padding: 12px;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      cursor: pointer;
      transition: 0.3s;
      color: white;
    }

    .bkash { background: #E2136E; }
    .nagad { background: #F7931E; }

    .method button:hover { transform: scale(1.05); }

    input, textarea {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 14px;
      outline: none;
    }

    .copy-btn {
      background: #4caf50;
      color: white;
      border: none;
      padding: 8px 12px;
      border-radius: 8px;
      cursor: pointer;
      margin-top: 5px;
    }

    .error {
      color: red;
      font-size: 14px;
      margin-top: 10px;
      display: none;
    }

    .success {
      color: green;
      font-size: 14px;
      margin-top: 10px;
      display: none;
    }
  </style>
</head>
<body>
  <div class="payment-box">
    <h2>Auto Payment System</h2>
    <div class="method">
      <button class="bkash">bKash Merchant</button>
      <button class="nagad">Nagad Personal</button>
    </div>

    <label>Amount (৳)</label>
    <input type="number" id="amount" placeholder="Enter amount">
    <button class="copy-btn" onclick="copyAmount()">Copy Amount</button>

    <label>TRX ID</label>
    <input type="text" id="trxid" placeholder="Enter Transaction ID">

    <label>Payment Time</label>
    <input type="datetime-local" id="paytime">

    <button class="copy-btn" onclick="validateTrx()">Validate Payment</button>

    <p id="error" class="error">❌ Invalid TRX ID or Expired</p>
    <p id="success" class="success">✅ Payment Verified Successfully</p>
  </div>

  <script>
    function copyAmount() {
      const amount = document.getElementById("amount").value;
      if (amount) {
        navigator.clipboard.writeText(amount);
        alert("Amount copied: " + amount);
      } else {
        alert("Please enter amount first");
      }
    }

    function validateTrx() {
      const trx = document.getElementById("trxid").value.trim();
      const paytime = document.getElementById("paytime").value;
      const error = document.getElementById("error");
      const success = document.getElementById("success");

      error.style.display = "none";
      success.style.display = "none";

      if (!trx.match(/^[A-Z0-9]{8,}$/)) {
        error.innerText = "❌ Invalid TRX ID Format";
        error.style.display = "block";
        return;
      }

      if (paytime) {
        const now = new Date();
        const paymentDate = new Date(paytime);
        const diff = (now - paymentDate) / (1000 * 60 * 60); // hours

        if (diff > 2) {
          error.innerText = "❌ TRX ID Expired (more than 2 hours)";
          error.style.display = "block";
          return;
        }
      } else {
        error.innerText = "❌ Please select payment time";
        error.style.display = "block";
        return;
      }

      success.style.display = "block";
    }
  </script>
</body>
</html>